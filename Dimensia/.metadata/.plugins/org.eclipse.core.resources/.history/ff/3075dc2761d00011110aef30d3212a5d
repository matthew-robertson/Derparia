package net.dimensia.src;

public class StatusEffect 
{
	public StatusEffect(int durationSeconds, int tier)
	{
		ticksLeft = durationSeconds * 20;
		this.tier = tier;
	}
	
	public void applyInitialPotionEffect(EntityLiving entity)
	{	
	}
	
	public void removeInitialPotionEffect(EntityLiving entity)
	{	
	}
	
	public void applyPeriodicBonus(World world, EntityLiving entity)
	{
		ticksLeft--;
	}
	
	public boolean isExpired()
	{
		return ticksLeft <= 0;
	}
	
	public int ticksLeft;
	public int tier;
}
