package net.dimensia.src;

/*
 * m - requires mp
 * b - requires bow
 */

public class EntityProjectile extends Entity{
	public EntityProjectile(int i, int damage, char c, float charge){
		projectileId = i;
		type = c;
		xLoc = 0;
		yLoc = 0;
		chargeTime = charge;
		this.damage = damage;
	}
	
	/**
	 * Needs major improvement, moves projectiles based off of current velocity
	 * @param world = the current world
	 * @param xVel = the projectile's left/right velocity
	 * @param yVel = the projectile's up/down velocity
	 */
	public void moveProjectile(World world, float xVel, float yVel){
		xLoc += xVel;
		yLoc += yVel;
	}
	
	public EntityProjectile setType(char c){
		type = c;
		return this;
	}
	
	public EntityProjectile setXLoc(int x){
		xLoc = x;
		return this;
	}
	
	public EntityProjectile setYLoc(int y){
		yLoc = y;
		return this;
	}
	
	public EntityProjectile setXLocAndYLoc(int y, int x){
		yLoc = y;
		xLoc = x;
		return this;
	}
	
	public EntityProjectile setChargeTime(int charge){
		chargeTime = charge;
		return this;
	}
	
	public EntityProjectile setDamage(int d){
		damage = d;
		return this;
	}
	
	protected char type;
	protected int projectileId;
	protected float xLoc;
	protected float yLoc;
	protected float chargeTime;
	protected int damage;
	
	public EntityProjectile[] projectileList;
}