package net.dimensia.src;

/*
 * m - requires mp
 * b - requires bow
 */

public class EntityProjectile extends Entity{
	public EntityProjectile(int i, char reqs, float charge){
		projectileId = i;
		type = reqs;
		xLoc = 0;
		yLoc = 0;
		chargeTime = charge;
	}
	
	public void moveProjectile(World world, float xVel, float yVel){
		xLoc += xVel;
		yLoc += yVel;
	}
	
	protected char type;
	protected int projectileId;
	protected float xLoc;
	protected float yLoc;
	protected float chargeTime;
}